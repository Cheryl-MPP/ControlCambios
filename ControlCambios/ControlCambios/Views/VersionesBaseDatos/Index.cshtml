@model IEnumerable<ControlCambios.Models.TablaVersionesBaseDatos>
@{
    ViewData["Title"] = "Versiones";
}

<style>
    .btn {
        width: 200px;
    }
</style>

<div class="d-flex justify-content-between align-items-center">
    <h4 class="text-start">Versiones</h4>
    <div class="text-end">
        <a class="btn btn-success " style="background-color: #90ff00; color: #000000;" asp-area="" asp-action="Create">Crear Versiones</a>
        <a class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="Index">Menú Principal</a>
    </div>
</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ObjetoBaseDatos.IdBaseDatos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObjetoBaseDatos.Nombre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NombreVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CambiosSolicitados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjetoBaseDatos.IdBaseDatos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ObjetoBaseDatos.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreVersion)
                </td>
                <td>
                    <div style="max-width: 300px;overflow-y: auto;">
                        @Html.DisplayFor(modelItem => item.CambiosSolicitados)
                    </div>
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.ObjetoBaseDatos.IdBaseDatos, NombreVersion = item.NombreVersion  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                    @Html.ActionLink("Detalle", "Details", new {  id=item.ObjetoBaseDatos.IdBaseDatos, NombreVersion = item.NombreVersion  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.ObjetoBaseDatos.IdBaseDatos, NombreVersion = item.NombreVersion  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                </td>
            </tr>
        }
    </tbody>
</table>
