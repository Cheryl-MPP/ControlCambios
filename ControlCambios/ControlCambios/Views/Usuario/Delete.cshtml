@model ControlCambios.Models.TablaUsuario

@{
    ViewData["Title"] = "Usuarios";
}

<style>
    .btn {
        width: 200px;
    }
</style>

<div class="d-flex justify-content-between align-items-center">
    <h4 class="text-start">Usuarios</h4>
    <div class="text-end">
        <a class="btn btn-success " asp-area="" asp-action="Index">Consultar Usuarios</a>
        <a class="btn btn-warning " asp-area="" asp-controller="Home" asp-action="Index">Menú Principal</a>
    </div>
</div>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CorreoElectronico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CorreoElectronico)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contrasenia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contrasenia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rol)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rol)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Autorizado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autorizado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" style="margin-top:10px; width:200px;" />
    </form>
</div>



@section Scripts {


    @if (ViewBag.cabecera != null)
    {
        <script>
            Swal.fire({
                position: 'center',
                icon: 'error',
                title: '@ViewBag.cabecera',
                text: '@Html.Raw(ViewBag.mensaje)',
                showConfirmButton: true
            }).then((result) => {
                if (result.isConfirmed) {
            @*window.location.href = '@Url.Action("Login", "Login")';*@
                                                                            } else if (result.isDenied) {
            @*window.location.href = '@Url.Action("Login", "Login")';*@
                                                                            }
            })
        </script>
    }



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }