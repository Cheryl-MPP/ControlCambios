@model IEnumerable<ControlCambios.Models.TablaUsuario>

@{
    ViewData["Title"] = "Usuarios";
}

<style>
    .btn {
        width: 200px;
    }
</style>

<div class="d-flex justify-content-between align-items-center">
    <h4 class="text-start">Usuarios</h4>
    <div class="text-end">
        <a class="btn btn-success " style="background-color: #90ff00; color: #000000;" asp-area="" asp-action="Create">Crear Usuario</a>
        <a class="btn btn-warning " asp-area="" asp-controller="Home" asp-action="Index">Menú Principal</a>
    </div>
</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrasenia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autorizado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorreoElectronico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contrasenia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autorizado)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.IdUsuario  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                    @Html.ActionLink("Detalle", "Details", new {  id=item.IdUsuario  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.IdUsuario  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                </td>
            </tr>
        }
    </tbody>
</table>
