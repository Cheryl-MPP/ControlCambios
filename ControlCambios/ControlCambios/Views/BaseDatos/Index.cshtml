@model IEnumerable<ControlCambios.Models.TablaBaseDatos>
@{
    ViewData["Title"] = "Base de Datos";
}

<style>
    .btn {
        width: 200px;
    }
</style>

<div class="d-flex justify-content-between align-items-center">
    <h4 class="text-start">Base de Datos</h4>
    <div class="text-end">
        <a class="btn btn-success " style="background-color: #90ff00; color: #000000;" asp-area="" asp-action="Create">Crear Base de Datos</a>
        <a class="btn btn-warning " asp-area="" asp-controller="Home" asp-action="Index">Menú Principal</a>
    </div>
</div>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdBaseDatos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdBaseDatos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activa)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.IdBaseDatos  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                    @Html.ActionLink("Detalle", "Details", new {  id=item.IdBaseDatos  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.IdBaseDatos  },  new { @class = "btn btn-primary" , style = "background-color: #d1d1d1; color: #000000; width: 100px;" })
                </td>
            </tr>
        }
    </tbody>
</table>
